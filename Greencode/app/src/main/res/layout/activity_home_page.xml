<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_constaint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="500dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/btn_menu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/folha_inicio"
            app:layout_constraintRight_toLeftOf="@id/green_code" />

        <TextView
            android:id="@+id/green_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GREEN CODE"
            android:textColor="#FFF"
            android:textSize="29sp"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/first_constaint_layout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="goToMarketPlace">

            <TextView
                android:id="@+id/txt_total_pontos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total de pontos registrados"
                android:textSize="12dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/points_icon"
                android:layout_width="42dp"
                android:layout_height="43dp"
                android:src="@drawable/points_icon"
                app:layout_constraintTop_toBottomOf="@id/txt_total_pontos"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.700"
                android:textSize="35sp"
                android:textColor="#FFF"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@id/points_icon"
                app:layout_constraintTop_toBottomOf="@id/txt_total_pontos"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent">


            <TextView
                android:id="@+id/txt_reciclar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reciclar"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:onClick="showQrCodeScreen"
                android:id="@+id/qr_code_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qr_code_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_reciclar"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="25dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/second_constraint_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:background="@drawable/cards_normal"
            android:layout_marginBottom="12.5dp"
            app:layout_constraintBottom_toTopOf="@id/second_card"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/parabens"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PARABÉNS"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="JOÃO SILVA"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/parabens"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/recyclable_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/parabens" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="você ja alcançou a marca de 500 materias reciclados em nossos pontos de reciclagem, o GREEN CODE agradesse a sua ajuda em nossa missão."
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cards_normal"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="12.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_card"
            tools:layout_editor_absoluteX="25dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/points_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/sale_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_pontos"/>

            <TextView
                android:id="@+id/txt_pontos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TROQUE SEUS GREEN POINTS"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@id/points_image"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Troque agora seus GreenPoints por descontos em itens, ingressos de cinema ou até mesmo naquele livro que ocê esta louco(a) pra ler."
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/txt_pontos" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/qr_code_screen"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="invisible">

       <View
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#CC000000"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:onClick="hideQrCodeScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_close"
            android:padding="30dp"
            app:layout_constraintRight_toRightOf="parent"/>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:foregroundGravity="center"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent">

           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/qr_code"
               android:layout_width="250dp"
               android:layout_height="250dp"
               android:src="@drawable/teste_qr"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"/>

           <TextView
               android:id="@+id/qr_code_txt"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Use o Qr code\n para logar na máquina"
               android:textSize="30sp"
               android:textColor="#FFF"
               app:layout_constraintTop_toBottomOf="@id/qr_code"/>

       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>